# Configuration de production pour Quiz Game API
# Copier ce fichier vers .env sur le serveur de production

APP_NAME="Quiz Suzuki CAN"
APP_ENV=production
APP_KEY=  # Générer avec: php artisan key:generate
APP_DEBUG=false
APP_URL=https://quiz-suzuki-can.ywcdigital.com

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - À configurer selon votre hébergement
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=quiz_suzuki_can
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=quiz-suzuki-can.ywcdigital.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=quiz_

# Mail - Configurer selon votre service d'email
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@quiz-suzuki-can.ywcdigital.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@quiz-suzuki-can.ywcdigital.com"
MAIL_FROM_NAME="${APP_NAME}"

# Twilio (optionnel - pour sécuriser l'API)
TWILIO_API_TOKEN=your_secret_token_here

# AWS (si vous utilisez S3 pour le stockage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
